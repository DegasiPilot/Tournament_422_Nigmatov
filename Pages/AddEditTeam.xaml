<Page x:Class="Tournament_422_Nigmatov.Pages.AddEditTeam"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_422_Nigmatov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditTeam">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock TextAlignment="Center" FontSize="18" Margin="0 0 0 15">Регистрация участника</TextBlock>

        <TextBlock Margin="0 10 0 0">Никнейм</TextBlock>
        <TextBox x:Name="NickTb" Text="{Binding Name}"></TextBox>

        <TextBlock Margin="0 10 0 0">Контакты</TextBlock>
        <TextBox x:Name="ContactsTb" Text="{Binding Contacts}"></TextBox>

        <StackPanel Margin="0 15 0 0">
            <Button x:Name="EnterBtn" Click="EnterBtn_Click">Сохранить команду</Button>
        </StackPanel>

        <StackPanel Margin="0 15 0 0">
            <Button x:Name="GoBackBtn" Click="GoBackBtn_Click">Вернуться к регистрации</Button>
        </StackPanel>
    </StackPanel>
</Page>
